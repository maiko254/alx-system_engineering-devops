!/usr/bin/env bash
# congfiguring nginx with a custom header on servers web01 and web02
#!/usr/bin/env bash
sudo apt-get update
sudo apt-get install -y nginx

sudo mkdir /etc/nginx/html
sudo touch /etc/nginx/html/mb-bnb.html
echo "<html><head></head><body>Hello World!<body></html>" > /etc/nginx/html/mb-bnb.html
printf %s "server {
     listen      80 default_server;
     listen      [::]:80 default_server;
     root        /etc/nginx/html;
     index       index.html index.htm;
     location / {
       index mb-bnb.html index.html index.htm;
     }
     location /redirect_me {
        return 301 http://msn.com;
     }
     error_page 404 /404.html;
     location /404 {
        root /etc/nginx/html;
        internal;
     }
}
" > /etc/nginx/sites-available/default
sed -i '/server {/a add_header X-Served-By $hostname;' /etc/nginx/sites-available/default
nginx -s reload
